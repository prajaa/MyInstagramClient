<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:id="@+id/header">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivUserProfile"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_width"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/ic_profile"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            android:layout_gravity="center_vertical"
            android:textColor="@color/blue_text"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivUserProfile"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/default_text_size"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:typeface="sans"
            android:layout_toLeftOf="@id/tvUserName"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/light_gray_text"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        fresco:placeholderImage="@drawable/ic_defaultpostpic"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/footer"
        android:layout_below="@+id/my_image_view"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        >
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="@dimen/footer_items_size"
            android:layout_height="@dimen/footer_items_size"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_heart"
            />
        <ImageView
            android:id="@+id/ivComment"
            android:layout_toRightOf="@+id/ivFavorite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="@dimen/footer_items_size"
            android:layout_height="@dimen/footer_items_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_comment"
            />
        <ImageButton
            android:layout_width="8dp"
            android:layout_height="@dimen/footer_items_size"
            android:src="@drawable/ic_more_dots"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ibShare"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <View android:layout_height="1dp"
        android:layout_below="@id/footer"
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:background="@color/light_gray_separator_line"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/gray_line"
        android:drawableLeft="@drawable/ic_small_heart_filled"
        android:drawablePadding="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="14dp"
        android:typeface="sans"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCaption"
        android:layout_marginLeft="14dp"
        android:textSize="@dimen/default_text_size"
        android:typeface="sans"
        android:layout_below="@+id/tvLikes"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCaption"
        android:id="@+id/tvViewAllComments"
        android:typeface="sans"
        android:textSize="14sp"
        android:layout_marginLeft="14dp"
        android:textColor="@color/light_gray_text"
        android:height="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvViewAllComments"
        android:id="@+id/llcomments"/>
</RelativeLayout>